{
    "extends": "eslint:recommended",

    "env": {
        "commonjs": true,
        "node": true,
        "browser": true
    },

    "globals": {
        "PRODUCTION": true
    },

    "rules": {
        "indent": ["warn", 4],
        "linebreak-style": ["error", "unix"],

        "no-unused-vars": "warn",
        "no-console": "off"
    }
}
